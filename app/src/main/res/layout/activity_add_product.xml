<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un produit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Nom -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ“ Nom du produit"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"/>

        <!-- Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ–Šï¸ Description"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Prix -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ’° Prix"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"/>

        <!-- Marque -->
        <EditText
            android:id="@+id/etBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ·ï¸ Marque"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"/>

        <!-- Taille de la bouteille -->
        <EditText
            android:id="@+id/etBottleSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ§´ Taille bouteille (ex : 100ml)"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"/>

        <!-- QuantitÃ© -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ“¦ QuantitÃ©"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"/>

        <!-- CatÃ©gorie -->
        <EditText
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ“‚ CatÃ©gorie"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp"/>

        <!-- Images - boutons + aperÃ§u -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Image 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnChooseImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–¼ï¸ Image 1"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD" />
            </LinearLayout>

            <!-- Image 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnChooseImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–¼ï¸ Image 2"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD" />
            </LinearLayout>

            <!-- Image 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnChooseImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ–¼ï¸ Image 3"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD" />
            </LinearLayout>

        </LinearLayout>

        <!-- Bouton Ajouter Produit -->
        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… Ajouter Produit"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="14dp"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>
