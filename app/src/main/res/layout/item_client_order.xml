<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/textOrderPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="📞 0600000000"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnViewDetails"
            app:layout_constraintHorizontal_bias="0" />

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails"
            android:textAllCaps="false"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textOrderCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="🏙️ Casablanca"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textOrderPhone"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textOrderAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="🏠 123 rue exemple"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textOrderCity"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 150 DH"
            android:textSize="14sp"
            android:textColor="#007700"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textOrderAddress" />

        <TextView
            android:id="@+id/textOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📦 En cours"
            android:textSize="14sp"
            android:textColor="#FF8800"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textOrderAddress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
